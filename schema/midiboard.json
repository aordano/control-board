{
    "$schema": "./midiboard.schema.json",
    "config": [
        {
            "device": "Your Device Here",
            "thresholds": {
                "encoder": {
                    "activation": 750,
                    "detection": 300
                },
                "switch": {
                    "activation": 1000,
                    "detection": 1000
                }
            },
            "controls": {
                "volume": {
                    "key": 0,
                    "command": {
                        "kind": "Encoder",
                        "decrease": "pactl set-sink-volume @DEFAULT_SINK@ -3%",
                        "increase": "pactl set-sink-volume @DEFAULT_SINK@ +3%"
                    }
                },
                "song": {
                    "key": 0,
                    "kind": "Encoder",
                    "command": {
                        "kind": "Encoder",
                        "decrease": "playerctl previous",
                        "increase": "playerctl next"
                    }
                },
                "pause": {
                    "key": 0,
                    "command": {
                        "kind": "Switch",
                        "on": "playerctl stop",
                        "off": "playerctl play",
                        "initial_state": "ON"
                    }
                }
            }
        }
    ]
}
