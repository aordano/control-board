{
    "$schema": "./midiboard.schema.json",
    "config": [
        {
            "device": "Your Device Here",
            "thresholds": {
                "encoder": {
                    "activation": 300,
                    "detection": 40
                },
                "switch": {
                    "activation": 400,
                    "detection": 200
                },
                "trigger": {
                    "activation": 1000,
                    "detection": 0
                }
            },
            "controls": {
                "volume": {
                    "key": 0,
                    "command": {
                        "kind": "Encoder",
                        "decrease": {
                            "cmd": "pactl",
                            "args": ["set-sink-volume", "@DEFAULT_SINK@", "-3%"]
                        },
                        "increase": {
                            "cmd": "pactl",
                            "args": ["set-sink-volume", "@DEFAULT_SINK@", "+3%"]
                        }
                    }
                },
                "song": {
                    "key": 0,
                    "kind": "Encoder",
                    "command": {
                        "kind": "Encoder",
                        "decrease": {
                            "cmd": "playerctl",
                            "args": ["previous"]
                        },
                        "increase": {
                            "cmd": "playerctl",
                            "args": ["next"]
                        }
                    }
                },
                "pause": {
                    "key": 0,
                    "command": {
                        "kind": "Trigger",
                        "execute": {
                            "cmd": "playerctl",
                            "args": ["toggle"]
                        }
                    }
                }
            }
        }
    ]
}
